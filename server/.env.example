# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# MongoDB Connection - use one of these:
MONGO_URI=mongodb://localhost:27017/vishwaniketan-campus
# or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/vishwaniketan-campus

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# JWT Configuration
JWT_EXPIRES_IN=30d # 30 days

# Email (for reset password)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@vishwaniketan.edu

# File Upload Limits
MAX_FILE_SIZE=5242880 # 5MB